---
import '@/styles/global.css'

import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Header from '@/components/Header.astro'
import { SITE } from '@/consts'
import { cn } from '@/lib/utils'

interface Props {
  class?: string
  containerType?: 'responsive' | 'reading' | 'wide' | 'fluid'
}

const { class: className, containerType = 'responsive' } = Astro.props

// Map container type to CSS class
const containerClass = `container-${containerType}`
---

<!doctype html>
<html
  class="bg-background text-foreground scheme-light-dark"
  lang={SITE.locale}
>
  <Head>
    <slot name="head" />
  </Head>
  <body class="flex h-fit min-h-screen flex-col gap-y-6 font-sans">
    <header
      class="bg-background/50 sticky top-0 z-50 divide-y backdrop-blur-sm xl:divide-none"
    >
      <Header />
      <slot name="subposts-navigation" />
      <slot name="table-of-contents" />
    </header>
    <main class={cn(containerClass, 'flex grow flex-col gap-y-6', className)}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
