---
import { Separator } from '@/components/ui/separator'
import { SOCIAL_LINKS, SITE } from '@/consts'
import Link from './Link.astro'
import SocialIcons from './SocialIcons.astro'

// Get GitHub link from SOCIAL_LINKS
const githubLink = SOCIAL_LINKS.find(link => link.label === 'GitHub')?.href || 'https://github.com/your-username'
---

<footer
  class="container-responsive mb-8 flex flex-col items-center justify-center gap-y-2 sm:mb-4 sm:flex-row sm:justify-between"
>
  <div class="flex flex-wrap items-center justify-center gap-x-2 text-center">
    <span class="text-muted-foreground text-sm">
      &copy; {new Date().getFullYear()} All rights reserved.
    </span>
    <Separator orientation="vertical" className="hidden h-4! sm:block" />
    <p class="text-muted-foreground text-sm">
      Made with ğŸ¤ by <Link
        href={githubLink}
        class="text-foreground"
        external
        underline>{SITE.author}</Link
      >!
    </p>
  </div>
  <SocialIcons links={SOCIAL_LINKS} />
</footer>

