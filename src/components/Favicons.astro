---
import { SITE } from '@/consts'
import { withBase } from '@/lib/utils/url'
---

<!-- Standard favicon (order matters: SVG first for modern browsers, then fallbacks) -->
<link rel="icon" type="image/svg+xml" href={withBase('/favicon.svg')} />
<link
  rel="icon"
  type="image/webp"
  href={withBase('/favicon-96x96.webp')}
  sizes="96x96"
/>
<link rel="icon" type="image/x-icon" href={withBase('/favicon.ico')} />

<!-- Apple Touch Icon -->
<link
  rel="apple-touch-icon"
  sizes="180x180"
  href={withBase('/apple-touch-icon.webp')}
/>
<meta name="apple-mobile-web-app-title" content={SITE.title} />

<!-- Web App Manifest -->
<link rel="manifest" href={withBase('/site.webmanifest')} />

<!-- Theme color -->
<meta
  name="theme-color"
  content="#ffffff"
  media="(prefers-color-scheme: light)"
/>
<meta
  name="theme-color"
  content="#1a1a1a"
  media="(prefers-color-scheme: dark)"
/>
