---
import { SITE } from '@/consts'
import type { CollectionEntry } from 'astro:content'

interface Props {
  chapter: CollectionEntry<'chapters'>
  novel: CollectionEntry<'novels'>
}

const { chapter, novel } = Astro.props

const title = `${chapter.data.title} - ${novel.data.title}` || SITE.title
const description =
  chapter.data.summary || novel.data.description || SITE.description
const image = new URL('/static/1200x630.png', Astro.site)
const author = novel.data.author || SITE.author
---

<title>{`${title} | ${SITE.title}`}</title>
<meta name="title" content={`${title} | ${SITE.title}`} />
<meta name="description" content={description} />
<link rel="canonical" href={SITE.href} />

<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta
  property="og:image"
  content={novel?.data?.coverImage?.src
    ? `${SITE.href}${novel.data.coverImage.src}`
    : image}
/>
<meta property="og:image:alt" content={title} />
<meta property="og:type" content="article" />
<meta property="og:locale" content={SITE.locale} />
<meta property="og:site_name" content={SITE.title} />
<meta property="og:url" content={Astro.url} />
<meta property="og:author" content={author} />

<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta
  property="twitter:image"
  content={novel?.data?.coverImage?.src
    ? `${SITE.href}${novel.data.coverImage.src}`
    : image}
/>
<meta name="twitter:image:alt" content={title} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:creator" content={author} />

{
  novel?.data.genre &&
    novel.data.genre.map((genre: string) => {
      return <meta property="article:tag" content={genre} />
    })
}
