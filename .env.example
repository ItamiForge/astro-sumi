# Copy this file to .env.local and customize your values
# Never commit .env.local to version control!

# Site Configuration
SITE_URL=https://your-site.com
SITE_TITLE=Astro Sumi
SITE_DESCRIPTION=A clean, minimal template specifically designed for novel and book writing projects
SITE_AUTHOR=Your Name

# Giscus Comments (GitHub Discussions)
# Get your configuration from https://giscus.app
GISCUS_REPO=your-username/your-repository-name
GISCUS_REPO_ID=R_kgDOH...
GISCUS_CATEGORY=General
GISCUS_CATEGORY_ID=DIC_kwDOH...
GISCUS_ENABLED=true

# Giscus Options (optional - defaults provided)
GISCUS_LANG=en
GISCUS_THEME=fro
GISCUS_MAPPING=pathname
GISCUS_LOADING=lazy
GISCUS_REACTIONS_ENABLED=1
GISCUS_EMIT_METADATA=0
GISCUS_STRICT=0
GISCUS_INPUT_POSITION=top

# Social Links (optional)
GITHUB_URL=
EMAIL_ADDRESS=
PATREON_URL=
KOFI_URL=

# Development (optional)
NODE_ENV=development
ENABLE_ANALYTICS=false
REPOSITORY_NAME=your-repository
REPOSITORY_OWNER=your-username
