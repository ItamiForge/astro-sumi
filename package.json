{
  "name": "astro-sumi",
  "type": "module",
  "version": "1.6.3",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "setup": "node scripts/setup.js",
    "prettier": "prettier --write **/*.{ts,tsx,astro} --ignore-path .gitignore",
    "lint": "bun run lint:css && bun run lint:md",
    "lint:css": "stylelint \"src/**/*.css\" --formatter verbose",
    "lint:md": "rumdl check .",
    "format": "bun run prettier && bun run format:css && bun run format:md",
    "format:css": "stylelint \"src/**/*.css\" --fix",
    "format:md": "rumdl fmt .",
    "security:audit": "bun audit --audit-level=moderate",
    "security:fix": "bun audit fix",
    "security:check": "bun audit --audit-level=critical --production",
    "security:full": "bun run security:audit && bun run security:check",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/markdown-remark": "^6.3.8",
    "@astrojs/mdx": "^4.3.9",
    "@astrojs/react": "^4.4.1",
    "@astrojs/rss": "^4.0.13",
    "@astrojs/sitemap": "^3.6.0",
    "@tailwindcss/vite": "^4.1.16",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "astro": "^5.15.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.552.0",
    "picocolors": "^1.1.1",
    "radix-ui": "^1.4.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.1",
    "remark-emoji": "^5.0.2",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@vitest/ui": "^4.0.6",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-astro-organize-imports": "^0.4.11",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-tailwindcss": "^1.0.0",
    "vitest": "^4.0.6"
  },
  "resolutions": {
    "form-data": "^4.0.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss",
      "prettier-plugin-astro-organize-imports"
    ],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}
